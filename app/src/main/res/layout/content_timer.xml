<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_timer"
        tools:context=".timer">
    <TextView
            android:layout_width="180dp"
            android:layout_height="126dp"
            android:id="@+id/timerText3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            android:textSize="90sp"
            android:textColor="#00BCD4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="3:20" android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:typeface="normal" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/timerText4" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.497"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timerText4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            android:textSize="40sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textColor="#00BCD4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:text="@string/time_remaining_text"
            app:layout_constraintHorizontal_bias="0.495"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/yei_world"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/imageView3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.588"/>
    <Button style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="399dp"
            android:layout_height="56dp"
            android:id="@+id/startTimerButton" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.14" android:text="@string/ready"/>
</androidx.constraintlayout.widget.ConstraintLayout>